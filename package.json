{
  "name": "mp3-mediarecorder",
  "version": "3.2.1",
  "description": "MediaRecorder ponyfill that records audio as mp3",
  "main": "dist/mp3-mediarecorder.umd.js",
  "module": "dist/mp3-mediarecorder.esm.js",
  "typings": "dist/types/recorder.d.ts",
  "types": "dist/types/recorder.d.ts",
  "files": [
    "dist",
    "package.json",
    "package-lock.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "format": "npm run format:write",
    "format:write": "prettier --write **/*.{ts,js,  yml,json,md}",
    "format:check": "prettier -l **/*.{ts,js,yml,json,md}",
    "tsc": "tsc --noEmit",
    "build": "rimraf dist && rollup -c && rollup -c rollup.config.min.js",
    "dev": "serve ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliasmeire/mp3-mediarecorder.git"
  },
  "keywords": [
    "mediarecorder",
    "polyfill",
    "ponyfill",
    "mp3",
    "mediastream",
    "audio",
    "encoding",
    "libmp3lame",
    "webassembly",
    "vmsg"
  ],
  "author": "Elias Meire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eliasmeire/mp3-mediarecorder/issues"
  },
  "homepage": "https://github.com/eliasmeire/mp3-mediarecorder#readme",
  "devDependencies": {
    "@semantic-release/git": "^7.0.8",
    "@types/dom-mediacapture-record": "^1.0.0",
    "@types/jest": "^23.3.13",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "prettier": "^1.16.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-babel-minify": "^7.0.0",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.19.2",
    "semantic-release": "^15.13.3",
    "serve": "^10.1.1",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "event-target-shim": "^5.0.0",
    "vmsg": "^0.3.5"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
