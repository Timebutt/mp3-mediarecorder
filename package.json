{
  "name": "mp3-mediarecorder",
  "version": "3.4.5",
  "description": "MediaRecorder ponyfill that records audio as mp3",
  "source": "src/recorder.ts",
  "unpkg": "dist/mp3-mediarecorder.umd.js",
  "main": "dist/mp3-mediarecorder.cjs.js",
  "umd:main": "dist/mp3-mediarecorder.umd.js",
  "module": "dist/mp3-mediarecorder.es.js",
  "typings": "dist/types/recorder.d.ts",
  "types": "dist/types/recorder.d.ts",
  "files": [
    "dist",
    "package.json",
    "package-lock.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "format": "npm run format:write",
    "format:write": "prettier --write **/*.{ts,js,yml,json,md}",
    "format:check": "prettier -l **/*.{ts,js,yml,json,md}",
    "tsc": "tsc --noEmit",
    "build": "microbundle -i src/recorder.ts -i src/worker.ts -o dist",
    "bundlesize": "bundlesize",
    "dev": "microbundle watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliasmeire/mp3-mediarecorder.git"
  },
  "keywords": [
    "mediarecorder",
    "polyfill",
    "ponyfill",
    "mp3",
    "mediastream",
    "audio",
    "encoding",
    "libmp3lame",
    "webassembly",
    "vmsg"
  ],
  "author": "Elias Meire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eliasmeire/mp3-mediarecorder/issues"
  },
  "homepage": "https://github.com/eliasmeire/mp3-mediarecorder#readme",
  "devDependencies": {
    "@semantic-release/git": "7.0.17",
    "@types/dom-mediacapture-record": "1.0.2",
    "@types/jest": "24.0.20",
    "@yarnpkg/pnpify": "2.0.0-rc.7",
    "bundlesize": "0.18.0",
    "jest": "24.9.0",
    "microbundle": "^0.11.0",
    "microenvi": "^0.3.1",
    "prettier": "1.18.2",
    "semantic-release": "15.13.28",
    "ts-jest": "24.1.0",
    "typescript": "3.6.4"
  },
  "dependencies": {
    "event-target-shim": "5.0.1"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "bundlesize": [
    {
      "path": "dist/mp3-mediarecorder.umd.js",
      "maxSize": "5kB"
    },
    {
      "path": "dist/mp3-mediarecorder.es5.js",
      "maxSize": "10kB"
    },
    {
      "path": "dist/mp3-mediarecorder.es2015.js",
      "maxSize": "10kB"
    }
  ]
}
