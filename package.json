{
  "name": "mp3-mediarecorder",
  "version": "3.4.5",
  "description": "MediaRecorder ponyfill that records audio as mp3",
  "main": "dist/index.js",
  "module": "dist/index.es5.js",
  "es2015": "dist/index.es.js",
  "browser": "dist/index.umd.js",
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "worker",
    "package.json",
    "yarn.lock",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "format": "npm run format:write",
    "format:write": "prettier --write **/*.{ts,js,yml,json,md}",
    "format:check": "prettier -l **/*.{ts,js,yml,json,md}",
    "tsc": "tsc --noEmit",
    "build": "del dist worker && rollup -c rollup.config.ts && cpy dist/worker/* worker &&  del dist/worker",
    "bundlesize": "bundlesize",
    "dev": "serve ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliasmeire/mp3-mediarecorder.git"
  },
  "keywords": [
    "mediarecorder",
    "polyfill",
    "ponyfill",
    "mp3",
    "mediastream",
    "audio",
    "encoding",
    "libmp3lame",
    "webassembly",
    "vmsg"
  ],
  "author": "Elias Meire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eliasmeire/mp3-mediarecorder/issues"
  },
  "homepage": "https://github.com/eliasmeire/mp3-mediarecorder#readme",
  "devDependencies": {
    "@semantic-release/git": "7.0.17",
    "@types/dom-mediacapture-record": "1.0.2",
    "@types/jest": "24.0.20",
    "@types/rollup-plugin-buble": "^0.19.1",
    "@types/rollup-plugin-sourcemaps": "^0.4.2",
    "bundlesize": "0.18.0",
    "cpy-cli": "^2.0.0",
    "del-cli": "^3.0.0",
    "jest": "24.9.0",
    "prettier": "1.18.2",
    "rollup": "^1.25.2",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.1.2",
    "semantic-release": "15.13.28",
    "serve": "11.2.0",
    "ts-jest": "24.1.0",
    "typescript": "3.6.4"
  },
  "dependencies": {
    "event-target-shim": "5.0.1",
    "rollup-plugin-typescript2": "^0.24.3",
    "vmsg": "0.3.6"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "bundlesize": [
    {
      "path": "dist/index.umd.js",
      "maxSize": "4kB"
    },
    {
      "path": "dist/index.es5.js",
      "maxSize": "4kB"
    },
    {
      "path": "dist/index.es.js",
      "maxSize": "4kB"
    },
    {
      "path": "dist/index.js",
      "maxSize": "4kB"
    },
    {
      "path": "worker/index.umd.js",
      "maxSize": "1kB"
    },
    {
      "path": "worker/index.es5.js",
      "maxSize": "1kB"
    },
    {
      "path": "worker/index.es.js",
      "maxSize": "1kB"
    },
    {
      "path": "worker/index.js",
      "maxSize": "1kB"
    }
  ]
}
